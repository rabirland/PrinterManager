@using PrinterManager;
@using UI.Components

<div class="frame">
    <div class="content">
        <TabView>
            <TabViewTab>
                <PagerContent>Console</PagerContent>
                <ChildContent>
                    <Console Communicator="Communicator" />
                </ChildContent>
            </TabViewTab>

            <TabViewTab>
                <PagerContent>Motor Controls</PagerContent>
                <ChildContent>
                    <MotorControls />
                    </ChildContent>
            </TabViewTab>

            <TabViewTab>
                <PagerContent>Calibration</PagerContent>
                <ChildContent>
                    <FlowMultiplierCalculator />
                </ChildContent>
            </TabViewTab>

            <TabViewTab>
                <PagerContent>Page 4</PagerContent>
                <ChildContent>Page 4 Content</ChildContent>
            </TabViewTab>
        </TabView>
    </div>
    <div class="statusbar">
        <SerialPortStatus />
        <TemperatureMeter />
    </div>
</div>



@code {
    [Inject]
    public PrinterManager.Communicators.SerialPortCommunicator? Communicator { get; set; }
}